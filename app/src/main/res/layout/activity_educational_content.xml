            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"/>

        <TextView
            android:id="@+id/behaviorTextView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Behavior: colonial breeders"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"/>

        <TextView
            android:id="@+id/conservationTextView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Conservation Status: Least Concern to Vulnerable"
