<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/speciesImageView1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/tiger" />

    <TextView
        android:id="@+id/habitatTextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Habitat:  Dense forests"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/behaviorTextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Behavior: Solitary and territorial"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/conservationTextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Conservation Status: Endangered"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"/>



    <ImageView
        android:id="@+id/speciesImageView2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="20dp"
        android:src="@drawable/polarbear" />

    <TextView
        android:id="@+id/habitatTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Habitat: islands"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/behaviorTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Behavior: excellent swimmers and hunters"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/conservationTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Conservation Status: Vulnerable"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"/>


        <ImageView
